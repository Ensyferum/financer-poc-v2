# =====================================================
# Environment Variables - Financer System
# Description: Centralized configuration
# =====================================================

# Application Version
APP_VERSION=1.0.0

# PostgreSQL Configuration
POSTGRES_DB=financer
POSTGRES_USER=financer_user
POSTGRES_PASSWORD=financer_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=mongo_admin
MONGO_INITDB_ROOT_PASSWORD=mongo_pass
MONGO_INITDB_DATABASE=financer
MONGO_HOST=mongodb
MONGO_PORT=27017

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_SCHEMA_REGISTRY_URL=http://schema-registry:8082
ZOOKEEPER_HOST=zookeeper
ZOOKEEPER_PORT=2181

# Service Discovery (Eureka)
EUREKA_SERVER_URL=http://eureka-server:8761/eureka

# Config Server
CONFIG_SERVER_URL=http://config-server:8888

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Logging
LOG_LEVEL=INFO
